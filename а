<body>
  <div class="bg-image"></div>

  <header>
    <div class="currency-circle">
      <span>₸</span>
      <span>$</span>
      <span>€</span>
      <span>₽</span>
    </div>
    <h1>Конвертер валют</h1>
  </header>

  <div class="calculator">
    <h2>Лабораторная №10 — Работа с модулями JS</h2>
    <p>Введите сумму и выберите валюты:</p>
    <input type="number" id="amount" value="100" placeholder="Сумма" />

    <div>
      <select id="from">
        <option value="USD">USD</option>
        <option value="EUR">EUR</option>
        <option value="KZT">KZT</option>
        <option value="RUB">RUB</option>
      </select>

      <select id="to">
        <option value="KZT">KZT</option>
        <option value="USD">USD</option>
        <option value="EUR">EUR</option>
        <option value="RUB">RUB</option>
      </select>
    </div>

    <br />
    <button id="calcBtn">Конвертировать</button>
    <div id="output" class="result"></div>
  </div>

  <script>
    
    const rates = {
      USD: { KZT: 480, EUR: 0.9, RUB: 95 },
      EUR: { KZT: 530, USD: 1.1, RUB: 100 },
      KZT: { USD: 0.0021, EUR: 0.0019, RUB: 0.19 },
      RUB: { USD: 0.0105, EUR: 0.0095, KZT: 5.3 },
    };


    function convert(amount, from, to) {
      if (from === to) return amount;
      const rate = rates[from][to];
      return amount * rate;
    }

 
    const calcBtn = document.getElementById("calcBtn");
    const amountInput = document.getElementById("amount");
    const fromSelect = document.getElementById("from");
    const toSelect = document.getElementById("to");
    const outputDiv = document.getElementById("output");

    calcBtn.addEventListener("click", () => {
      const amount = parseFloat(amountInput.value);
      const from = fromSelect.value;
      const to = toSelect.value;

      if (isNaN(amount) || amount <= 0) {
        outputDiv.innerHTML = "<span style='color:#ffb3b3;'>Введите корректную сумму!</span>";
        outputDiv.classList.add("show");
        return;
      }

      const result = convert(amount, from, to);
      outputDiv.innerHTML = `<strong>${amount} ${from}</strong> = <strong>${result.toFixed(2)} ${to}</strong>`;
      outputDiv.classList.add("show");
    });
  </script>
</body>
